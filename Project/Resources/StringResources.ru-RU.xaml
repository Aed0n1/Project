    <system:String x:Key="Back">Назад</system:String>
    <system:String x:Key="Settings">Настройки</system:String>
    
    <!-- Настройки -->
    <system:String x:Key="Theme">Тема</system:String>
    <system:String x:Key="LightTheme">Светлая тема</system:String>
    <system:String x:Key="DarkTheme">Темная тема</system:String>
    <system:String x:Key="FontSize">Размер шрифта</system:String>
    <system:String x:Key="Language">Язык</system:String>
    <system:String x:Key="Small">Маленький</system:String>
    <system:String x:Key="Medium">Средний</system:String>
    <system:String x:Key="Large">Большой</system:String>
    
    <!-- Главное меню -->
    <system:String x:Key="AddList">Добавить список</system:String>
    <system:String x:Key="KKal">Калории</system:String>
    <system:String x:Key="QRCode">QR-Код</system:String>
</ResourceDictionary> 