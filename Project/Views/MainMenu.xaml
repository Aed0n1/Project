<UserControl x:Class="Project.Views.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Project.Views"
             Height="Auto" Width="Auto">
    <Grid>
        <Image Source="/Images/background.JPG" Stretch="Fill"/>

        <Ellipse Width="300" Height="300" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0">
            <Ellipse.Fill>
                <ImageBrush ImageSource="/Images/logo.png" Stretch="Uniform"/>
            </Ellipse.Fill>
        </Ellipse>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,400,0,0" Orientation="Vertical">
            <Button Content="To Add a List" Style="{StaticResource RoundedButton}" Click="AddListButton_Click"/>
            <Button Content="KKal" Style="{StaticResource RoundedButton}" Click="KKalButton_Click"/>
            <Button Content="QR-Code" Style="{StaticResource RoundedButton}" Click="QRButton_Click"/>
            <Button Content="Settings" Style="{StaticResource RoundedButton}" Click="SettingsButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
