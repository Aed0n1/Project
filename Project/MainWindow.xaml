<Window x:Class="Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="Shopping list with calories and nutritional values" Height="950" Width="800">
    <Grid Margin="0,10,0,0">
        <!-- Стиль для кнопок -->
        <Grid.Resources>
            <Style x:Key="RoundedButton" TargetType="Button">
                <Setter Property="Width" Value="250"/>
                <Setter Property="Height" Value="60"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Background" Value="#804CAF50"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}"
                                    CornerRadius="30"
                                    BorderThickness="0"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="15" ShadowDepth="3" Direction="320" Color="Black" Opacity="0.5"/>
                                </Border.Effect>
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation 
                                                    Storyboard.TargetName="border"
                                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                    To="1.1" Duration="0:0:0.2"/>
                                                <DoubleAnimation 
                                                    Storyboard.TargetName="border"
                                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                    To="1.1" Duration="0:0:0.2"/>
                                                <ColorAnimation 
                                                    Storyboard.TargetName="border"
                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    To="#B345A049" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation 
                                                    Storyboard.TargetName="border"
                                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                    To="1.0" Duration="0:0:0.2"/>
                                                <DoubleAnimation 
                                                    Storyboard.TargetName="border"
                                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                    To="1.0" Duration="0:0:0.2"/>
                                                <ColorAnimation 
                                                    Storyboard.TargetName="border"
                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    To="#804CAF50" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <!-- Фоновое изображение -->
        <Image Source="Images/background.jpg" Stretch="Fill"/>

        <!-- Круглый логотип -->
        <Ellipse Width="300" Height="300" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0">
            <Ellipse.Fill>
                <ImageBrush ImageSource="Images/logo.png" Stretch="Uniform"/>
            </Ellipse.Fill>
        </Ellipse>

        <!-- Кнопки -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,400,0,0" Orientation="Vertical">
            <Button Content="To Add a List" Style="{StaticResource RoundedButton}"/>
            <Button Content="KKal" Style="{StaticResource RoundedButton}"/>
            <Button Content="QR-Code" Style="{StaticResource RoundedButton}"/>
            <Button Content="Settings" Style="{StaticResource RoundedButton}"/>
        </StackPanel>
    </Grid>
</Window>
