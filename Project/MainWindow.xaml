<Window x:Class="Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Project.Views"
        Title="Shopping List App" Height="950" Width="800">
    <Grid>

        <!-- Фоновое изображение -->
            <!-- Фоновое изображение -->
            <Image Source="pack://application:,,,/Images/background.JPG" Stretch="Fill"/>

            <!-- Круглый логотип без белого фона -->
            <Ellipse Width="270" Height="270" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,650">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="pack://application:,,,/Images/logo.png" Stretch="Uniform"/>
                </Ellipse.Fill>
            </Ellipse>

            <!-- Содержимое окна -->
        <ContentControl Name="MainContent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        
        <!-- Кнопки для переключения контента -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,400,0,0" Orientation="Vertical">
            <Button Content="To Add a List" Style="{StaticResource RoundedButton}" Click="AddListButton_Click"/>
            <Button Content="KKal" Style="{StaticResource RoundedButton}" Click="KKalButton_Click"/>
            <Button Content="QR-Code" Style="{StaticResource RoundedButton}" Click="QRScannerButton_Click"/>
            <Button Content="Settings" Style="{StaticResource RoundedButton}" Click="SettingsButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
